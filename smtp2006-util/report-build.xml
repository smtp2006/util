<project basedir="." name="dev-plugin" default="site">
	<!--site所有报告-->
	<target name="site">
		<exec executable="cmd">
			<arg value="/c" />
			<arg value="mvn site" />
		</exec>
	</target>
	<!--checkstyle报告-->
	<target name="check_style">
		<exec executable="cmd">
			<arg value="/c" />
			<arg value="mvn checkstyle:checkstyle" />
		</exec>
	</target>
	<!--cobertura报告-->
	<target name="cobertura">
		<exec executable="cmd">
			<arg value="/c" />
			<arg value="mvn cobertura:cobertura" />
		</exec>
	</target>
	<!--findbugs报告-->
	<target name="findbugs">
		<exec executable="cmd">
			<arg value="/c" />
			<arg value="mvn findbugs:findbugs" />
		</exec>
	</target>
	<!--pmd报告-->
	<target name="pmd">
		<exec executable="cmd">
			<arg value="/c" />
			<arg value="mvn pmd:pmd" />
		</exec>
	</target>
</project>